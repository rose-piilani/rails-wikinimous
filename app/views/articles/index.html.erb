<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
    <div class="article">
      <hr/>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= article.content %></p>
      <%= link_to "Delete", article_path(article),
          method: :delete,
          data: { confirm: "Are you sure?" } %> |
       <%= link_to "Edit", edit_article_path(article) %>
    </div>
    <% end %>
  </div>
</div>
